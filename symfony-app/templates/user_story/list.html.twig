{% extends 'base.html.twig' %}

{% block title %}User Stories - {{ project.name }} - MAESTRO{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_analyses_list') }}">Projets</a></li>
                <li class="breadcrumb-item active">User Stories - {{ project.name }}</li>
            </ol>
        </nav>
        <h1 class="display-6 fw-bold text-primary mb-3">
            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                User Stories - {{ project.name }}
            </span>
        </h1>
    </div>
</div>

{# Statistics Cards #}
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted mb-2">Total Stories</h6>
                <h2 class="text-primary mb-0">{{ stats.total }}</h2>
                <small class="text-muted">{{ stats.total_points }} points</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted mb-2">MUST Have</h6>
                <h2 class="text-danger mb-0">{{ stats.by_priority.MUST }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted mb-2">TODO</h6>
                <h2 class="text-info mb-0">{{ stats.by_status.TODO }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted mb-2">DONE</h6>
                <h2 class="text-success mb-0">{{ stats.by_status.DONE }}</h2>
            </div>
        </div>
    </div>
</div>

{# Filters #}
<div class="row mb-4">
    <div class="col">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Recherche</label>
                        <input type="text"
                               name="search"
                               class="form-control"
                               placeholder="Rechercher..."
                               value="{{ filters.search }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Priorité</label>
                        <select name="priority" class="form-select">
                            <option value="">Toutes</option>
                            <option value="MUST" {{ filters.priority == 'MUST' ? 'selected' : '' }}>MUST</option>
                            <option value="SHOULD" {{ filters.priority == 'SHOULD' ? 'selected' : '' }}>SHOULD</option>
                            <option value="COULD" {{ filters.priority == 'COULD' ? 'selected' : '' }}>COULD</option>
                            <option value="WONT" {{ filters.priority == 'WONT' ? 'selected' : '' }}>WON'T</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Statut</label>
                        <select name="status" class="form-select">
                            <option value="">Tous</option>
                            <option value="TODO" {{ filters.status == 'TODO' ? 'selected' : '' }}>TODO</option>
                            <option value="IN_PROGRESS" {{ filters.status == 'IN_PROGRESS' ? 'selected' : '' }}>IN PROGRESS</option>
                            <option value="DONE" {{ filters.status == 'DONE' ? 'selected' : '' }}>DONE</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{# User Stories Grid #}
<div class="row mb-4">
    <div class="col-12">
        {% if stories is empty %}
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <h5 class="text-muted">Aucune user story trouvée</h5>
                    <p class="text-muted">{{ filters.search or filters.priority or filters.status ? 'Essayez de modifier vos filtres' : 'Aucune user story n\'a encore été générée pour ce projet' }}</p>
                </div>
            </div>
        {% else %}
            <div class="row g-3">
                {% for story in stories %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-start border-4 {% if story.priority == 'MUST' %}border-danger{% elseif story.priority == 'SHOULD' %}border-warning{% elseif story.priority == 'COULD' %}border-info{% else %}border-secondary{% endif %} shadow-sm">
                        <div class="card-body d-flex flex-column">
                            {# Header #}
                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-between flex-wrap gap-1 mb-2">
                                    <div class="d-flex gap-1 flex-wrap">
                                        <span class="badge bg-secondary">{{ story.id }}</span>
                                        <span class="badge {% if story.priority == 'MUST' %}bg-danger{% elseif story.priority == 'SHOULD' %}bg-warning{% elseif story.priority == 'COULD' %}bg-info{% else %}bg-secondary{% endif %}">
                                            {{ story.priority }}
                                        </span>
                                        <span class="badge bg-primary">{{ story.story_points }} pts</span>
                                    </div>
                                    <span class="badge {% if story.status == 'TODO' %}bg-info{% elseif story.status == 'IN_PROGRESS' %}bg-warning{% else %}bg-success{% endif %}">
                                        {{ story.status }}
                                    </span>
                                </div>
                                <h6 class="card-title mb-1">{{ story.title }}</h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> {{ story.analysis_date|date('d/m/Y') }}
                                </small>
                            </div>

                            {# User Story Format - Collapsible #}
                            <div class="mb-3">
                                <details>
                                    <summary style="cursor: pointer;" class="text-primary mb-2">
                                        <small><i class="bi bi-info-circle"></i> Voir le détail</small>
                                    </summary>
                                    <div class="alert alert-light mb-0 mt-2">
                                        <p class="mb-1"><small><strong>En tant que</strong> {{ story.as_a }}</small></p>
                                        <p class="mb-1"><small><strong>Je veux</strong> {{ story.i_want }}</small></p>
                                        <p class="mb-0"><small><strong>Afin de</strong> {{ story.so_that }}</small></p>
                                    </div>
                                </details>
                            </div>

                            {# Acceptance Criteria - Collapsible #}
                            {% if story.acceptance_criteria is not empty %}
                            <div class="mb-3">
                                <details>
                                    <summary style="cursor: pointer;" class="text-success mb-2">
                                        <small><i class="bi bi-check-circle"></i> Critères ({{ story.acceptance_criteria|length }})</small>
                                    </summary>
                                    <ul class="list-group list-group-flush mt-2">
                                        {% for criteria in story.acceptance_criteria %}
                                        <li class="list-group-item px-0 py-1">
                                            <small>{{ criteria }}</small>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </details>
                            </div>
                            {% endif %}

                            {# Test Scenarios #}
                            {% if story.test_scenarios is not empty %}
                            <div class="mb-3">
                                {% if story.test_scenarios is iterable %}
                                    {# New format: array of scenarios #}
                                    <details>
                                        <summary style="cursor: pointer;" class="text-info mb-2">
                                            <small><i class="bi bi-clipboard-check"></i> Scénarios de test ({{ story.test_scenarios|length }})</small>
                                        </summary>
                                        <ul class="list-group list-group-flush mt-2">
                                            {% for scenario in story.test_scenarios %}
                                            <li class="list-group-item px-0 py-1">
                                                <small>{{ scenario }}</small>
                                            </li>
                                            {% endfor %}
                                        </ul>
                                    </details>
                                {% else %}
                                    {# Old format: just a number #}
                                    <small class="text-info">
                                        <i class="bi bi-clipboard-check"></i> {{ story.test_scenarios }} scénarios de test (ancien format)
                                    </small>
                                {% endif %}
                            </div>
                            {% endif %}

                            {# Footer - pushed to bottom #}
                            <div class="mt-auto pt-2 border-top">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-file-text"></i>
                                        <a href="{{ path('app_analysis_detail', {id: story.analysis_id}) }}" class="text-decoration-none">
                                            Voir l'analyse
                                        </a>
                                    </small>
                                    <a href="{{ path('app_user_story_edit', {analysisId: story.analysis_id, storyId: story.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Éditer
                                    </a>
                                </div>

                                {% if story.dependencies is not empty %}
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-link-45deg"></i> <strong>Dépend de:</strong>
                                        {% for dep in story.dependencies %}
                                            <span class="badge bg-light text-dark">{{ dep }}</span>
                                        {% endfor %}
                                    </small>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}
