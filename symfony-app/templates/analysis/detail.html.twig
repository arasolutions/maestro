{% extends 'base.html.twig' %}

{% block title %}D√©tail Analyse - MAESTRO{% endblock %}

{% block body %}
{# Header #}
<div class="row mb-4">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_analyses_list') }}">Analyses</a></li>
                <li class="breadcrumb-item active">D√©tail</li>
            </ol>
        </nav>
        <h1 class="display-6 fw-bold text-primary mb-3">
            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                Analyse D√©taill√©e
            </span>
        </h1>
    </div>
</div>

{# Main Analysis Card #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h4 class="mb-0 text-white">üìã Requ√™te d'Analyse</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="text-dark">{{ analysis.request_text }}</h5>
                        <p class="text-muted">
                            <small>Cr√©√© le {{ analysis.created_at|date('d/m/Y √† H:i') }}</small>
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="mb-2">
                            <strong>Type:</strong>
                            <span class="badge bg-{{ analysis.analysis_type == 'FEATURE' ? 'primary' : (analysis.analysis_type == 'BUG' ? 'danger' : 'info') }}">
                                {{ analysis.analysis_type|default('N/A') }}
                            </span>
                        </div>
                        <div class="mb-2">
                            <strong>Complexit√©:</strong>
                            <span class="badge bg-{{ analysis.complexity == 'XS' ? 'success' : (analysis.complexity == 'S' ? 'info' : (analysis.complexity == 'M' ? 'warning' : 'danger')) }}">
                                {{ analysis.complexity|default('N/A') }}
                            </span>
                        </div>
                        <div class="mb-2">
                            <strong>Priorit√©:</strong>
                            <span class="badge bg-{{ analysis.priority == 'CRITICAL' ? 'danger' : (analysis.priority == 'HIGH' ? 'warning' : 'info') }}">
                                {{ analysis.priority|default('N/A') }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Metrics Row #}
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted">Confiance IA</h6>
                <h2 class="text-{{ analysis.confidence >= 0.8 ? 'success' : (analysis.confidence >= 0.6 ? 'info' : 'warning') }}">
                    {{ (analysis.confidence * 100)|round }}%
                </h2>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-{{ analysis.confidence >= 0.8 ? 'success' : (analysis.confidence >= 0.6 ? 'info' : 'warning') }}"
                         style="width: {{ (analysis.confidence * 100)|round }}%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted">Heures Estim√©es</h6>
                <h2 class="text-dark">{{ analysis.estimated_hours|default('N/A') }}h</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted">Agents N√©cessaires</h6>
                <h2 class="text-dark">{{ analysis.agents_needed|length }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted">Parall√©lisation</h6>
                <h2 class="text-dark">{{ analysis.parallel_possible ? '‚úì Oui' : '‚úó Non' }}</h2>
            </div>
        </div>
    </div>
</div>

{# Agents Needed #}
{% if analysis.agents_needed is not empty %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 text-dark">ü§ñ Agents IA N√©cessaires</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    {% for agent in analysis.agents_needed %}
                    <div class="col-md-4">
                        <div class="border rounded p-3 h-100 bg-light">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-primary me-2">{{ loop.index }}</span>
                                <strong>{{ agent }}</strong>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{# Next Steps and Risks #}
<div class="row mb-4">
    {% if analysis.next_steps is not empty %}
    <div class="col-md-{{ analysis.risks is not empty ? '6' : '12' }}">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 text-dark">üìù Prochaines √âtapes</h5>
            </div>
            <div class="card-body">
                <ol class="list-group list-group-numbered">
                    {% for step in analysis.next_steps %}
                    <li class="list-group-item border-0 px-0">{{ step }}</li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
    {% endif %}

    {% if analysis.risks is not empty %}
    <div class="col-md-{{ analysis.next_steps is not empty ? '6' : '12' }}">
        <div class="card border-0 shadow-sm border-warning h-100">
            <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
                <h5 class="mb-0 text-dark">‚ö†Ô∏è Risques Identifi√©s</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for risk in analysis.risks %}
                    <li class="list-group-item border-0 px-0">
                        <span class="badge bg-warning text-dark me-2">!</span>
                        {{ risk }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    {% endif %}
</div>

{# Cadrage Section #}
{% if cadrage %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); cursor: pointer;"
                 data-bs-toggle="collapse"
                 data-bs-target="#cadrageCollapse"
                 aria-expanded="true"
                 aria-controls="cadrageCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <h4 class="mb-0 text-white">üéØ Cadrage Architectural</h4>
                        <i class="bi bi-chevron-down text-white ms-2" id="cadrageChevron"></i>
                    </div>
                    {% if cadrage.status %}
                        <span class="badge bg-{{ cadrage.status == 'PENDING' ? 'warning' : (cadrage.status == 'ACCEPTED' ? 'success' : 'danger') }}" style="font-size: 1rem;">
                            {{ cadrage.status == 'PENDING' ? '‚è≥ EN ATTENTE' : (cadrage.status == 'ACCEPTED' ? '‚úÖ ACCEPT√â' : '‚ùå REJET√â') }}
                        </span>
                    {% endif %}
                </div>
            </div>
            <div id="cadrageCollapse" class="collapse show">
            <div class="card-body">
                {# Accept/Reject Actions for PENDING proposals #}
                {% if cadrage.status == 'PENDING' %}
                <div class="alert alert-info mb-4" role="alert">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="alert-heading mb-2">
                                <i class="bi bi-info-circle"></i> Proposition de Cadrage en attente de validation
                            </h5>
                            <p class="mb-0">
                                Cette proposition de cadrage a √©t√© g√©n√©r√©e par l'IA.
                                {% if projectCadrage %}
                                    Vous pouvez la comparer avec le cadrage actuel du projet ci-dessous et d√©cider de l'accepter ou de la rejeter.
                                {% else %}
                                    Il s'agit de la premi√®re proposition de cadrage pour ce projet.
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <form method="post" action="{{ path('app_cadrage_accept', { proposalId: cadrage.id }) }}" style="display: inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir accepter cette proposition ? Elle sera fusionn√©e avec le cadrage du projet.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('accept_cadrage_' ~ cadrage.id) }}">
                                <button type="submit" class="btn btn-success btn-lg me-2">
                                    <i class="bi bi-check-circle"></i> Accepter
                                </button>
                            </form>
                            <form method="post" action="{{ path('app_cadrage_reject', { proposalId: cadrage.id }) }}" style="display: inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir rejeter cette proposition ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('reject_cadrage_' ~ cadrage.id) }}">
                                <button type="submit" class="btn btn-outline-danger btn-lg">
                                    <i class="bi bi-x-circle"></i> Rejeter
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                {# Show diff if PENDING and project has existing cadrage #}
                {% if diff and projectCadrage %}
                <div class="alert alert-light border mb-4">
                    <h6 class="mb-3"><i class="bi bi-arrows-collapse"></i> Comparaison avec le cadrage actuel du projet</h6>

                    {% if diff.added is not empty %}
                    <div class="mb-3">
                        <h6 class="text-success"><i class="bi bi-plus-circle"></i> Nouveaux √©l√©ments propos√©s</h6>
                        <ul class="list-unstyled ms-3">
                            {% for key, value in diff.added %}
                            <li class="mb-2">
                                <span class="badge bg-success">{{ key|upper }}</span>
                                <span class="text-muted ms-2">Nouvel √©l√©ment ajout√©</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    {% if diff.modified is not empty %}
                    <div class="mb-3">
                        <h6 class="text-warning"><i class="bi bi-arrow-repeat"></i> √âl√©ments modifi√©s</h6>
                        <ul class="list-unstyled ms-3">
                            {% for key, changes in diff.modified %}
                            <li class="mb-2">
                                <span class="badge bg-warning">{{ key|upper }}</span>
                                <span class="text-muted ms-2">Modification propos√©e</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    {% if diff.removed is not empty %}
                    <div class="mb-3">
                        <h6 class="text-danger"><i class="bi bi-dash-circle"></i> √âl√©ments supprim√©s</h6>
                        <ul class="list-unstyled ms-3">
                            {% for key, value in diff.removed %}
                            <li class="mb-2">
                                <span class="badge bg-danger">{{ key|upper }}</span>
                                <span class="text-muted ms-2">Sera supprim√©</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    {% if diff.unchanged is not empty %}
                    <div>
                        <h6 class="text-secondary"><i class="bi bi-check2"></i> √âl√©ments inchang√©s</h6>
                        <div class="ms-3">
                            {% for key in diff.unchanged|keys %}
                            <span class="badge bg-secondary me-1">{{ key|upper }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                </div>
                {% endif %}
                {% endif %}

                <div class="row">
                    {% if cadrage.perimetre %}
                    <div class="col-md-6 mb-4">
                        <h6 class="text-primary mb-3"><i class="bi bi-diagram-3"></i> P√©rim√®tre</h6>

                        {% if cadrage.perimetre.objectif_principal is defined %}
                        <div class="alert alert-primary mb-3">
                            <strong>Objectif principal :</strong> {{ cadrage.perimetre.objectif_principal }}
                        </div>
                        {% endif %}

                        {% if cadrage.perimetre.fonctionnalites_core is defined %}
                        <div class="mb-3">
                            <h6 class="text-success mb-2"><i class="bi bi-check-circle"></i> Fonctionnalit√©s Core</h6>
                            <ul class="list-group list-group-flush">
                                {% for feature in cadrage.perimetre.fonctionnalites_core %}
                                <li class="list-group-item px-0 py-2">
                                    <i class="bi bi-check2 text-success me-2"></i>{{ feature }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}

                        {% if cadrage.perimetre.fonctionnalites_nice_to_have is defined %}
                        <div class="mb-3">
                            <h6 class="text-info mb-2"><i class="bi bi-star"></i> Nice to Have</h6>
                            <ul class="list-group list-group-flush">
                                {% for feature in cadrage.perimetre.fonctionnalites_nice_to_have %}
                                <li class="list-group-item px-0 py-2">
                                    <i class="bi bi-star text-info me-2"></i>{{ feature }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}

                        {% if cadrage.perimetre.hors_perimetre is defined %}
                        <div class="mb-3">
                            <h6 class="text-danger mb-2"><i class="bi bi-x-circle"></i> Hors P√©rim√®tre</h6>
                            <ul class="list-group list-group-flush">
                                {% for item in cadrage.perimetre.hors_perimetre %}
                                <li class="list-group-item px-0 py-2">
                                    <i class="bi bi-x text-danger me-2"></i>{{ item }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% if cadrage.architecture %}
                    <div class="col-md-6 mb-4">
                        <h6 class="text-info mb-3"><i class="bi bi-building"></i> Architecture Propos√©e</h6>

                        {% if cadrage.architecture.type is defined %}
                        <div class="mb-3">
                            <span class="badge bg-info" style="font-size: 1rem;">{{ cadrage.architecture.type }}</span>
                        </div>
                        {% endif %}

                        {% if cadrage.architecture.stack_recommande is defined %}
                        <div class="mb-3">
                            <h6 class="text-secondary mb-2"><i class="bi bi-layers"></i> Stack Recommand√©e</h6>
                            <div class="row g-2">
                                {% if cadrage.architecture.stack_recommande.backend is defined %}
                                <div class="col-12">
                                    <div class="border rounded p-2 bg-light">
                                        <strong>Backend:</strong> {{ cadrage.architecture.stack_recommande.backend }}
                                    </div>
                                </div>
                                {% endif %}
                                {% if cadrage.architecture.stack_recommande.frontend is defined %}
                                <div class="col-12">
                                    <div class="border rounded p-2 bg-light">
                                        <strong>Frontend:</strong> {{ cadrage.architecture.stack_recommande.frontend }}
                                    </div>
                                </div>
                                {% endif %}
                                {% if cadrage.architecture.stack_recommande.database is defined %}
                                <div class="col-12">
                                    <div class="border rounded p-2 bg-light">
                                        <strong>Database:</strong> {{ cadrage.architecture.stack_recommande.database }}
                                    </div>
                                </div>
                                {% endif %}
                                {% if cadrage.architecture.stack_recommande.infrastructure is defined %}
                                <div class="col-12">
                                    <div class="border rounded p-2 bg-light">
                                        <strong>Infrastructure:</strong> {{ cadrage.architecture.stack_recommande.infrastructure }}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}

                        {% if cadrage.architecture.composants_principaux is defined %}
                        <div class="mb-3">
                            <h6 class="text-secondary mb-2"><i class="bi bi-puzzle"></i> Composants Principaux</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for composant in cadrage.architecture.composants_principaux %}
                                <span class="badge bg-secondary">{{ composant }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% if cadrage.estimation %}
                    <div class="col-md-12 mb-4">
                        <div class="alert alert-warning mb-0">
                            <h6 class="mb-2"><i class="bi bi-clock-history"></i> Estimation</h6>
                            {% if cadrage.estimation.effort_jours is defined %}
                            <p class="mb-0">
                                <strong>Effort total :</strong> {{ cadrage.estimation.effort_jours }} jours
                                {% if cadrage.estimation.equipe_taille is defined %}
                                avec une √©quipe de {{ cadrage.estimation.equipe_taille }} personne(s)
                                {% endif %}
                            </p>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% if cadrage.swot %}
                    <div class="col-md-12 mb-4">
                        <h6 class="text-success mb-3"><i class="bi bi-graph-up"></i> Analyse SWOT</h6>
                        <div class="row g-3">
                            {% if cadrage.swot.strengths is defined %}
                            <div class="col-md-6">
                                <div class="card border-success">
                                    <div class="card-header bg-success bg-opacity-10">
                                        <strong class="text-success">Forces</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for strength in cadrage.swot.strengths %}
                                            <li>{{ strength }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            {% if cadrage.swot.weaknesses is defined %}
                            <div class="col-md-6">
                                <div class="card border-warning">
                                    <div class="card-header bg-warning bg-opacity-10">
                                        <strong class="text-warning">Faiblesses</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for weakness in cadrage.swot.weaknesses %}
                                            <li>{{ weakness }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            {% if cadrage.swot.opportunities is defined %}
                            <div class="col-md-6">
                                <div class="card border-info">
                                    <div class="card-header bg-info bg-opacity-10">
                                        <strong class="text-info">Opportunit√©s</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for opportunity in cadrage.swot.opportunities %}
                                            <li>{{ opportunity }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            {% if cadrage.swot.threats is defined %}
                            <div class="col-md-6">
                                <div class="card border-danger">
                                    <div class="card-header bg-danger bg-opacity-10">
                                        <strong class="text-danger">Menaces</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for threat in cadrage.swot.threats %}
                                            <li>{{ threat }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% if cadrage.contraintes %}
                    <div class="col-md-12">
                        <h6 class="text-warning mb-3"><i class="bi bi-exclamation-triangle"></i> Contraintes</h6>
                        <div class="row g-3">
                            {% if cadrage.contraintes.techniques is defined %}
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <strong>Contraintes Techniques</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for contrainte in cadrage.contraintes.techniques %}
                                            <li>{{ contrainte }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            {% if cadrage.contraintes.business is defined %}
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <strong>Contraintes Business</strong>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            {% for contrainte in cadrage.contraintes.business %}
                                            <li>{{ contrainte }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{# User Stories Section #}
{% if userStories %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white"><i class="bi bi-journal-text"></i> User Stories</h4>
                    <span class="badge bg-light text-dark" style="font-size: 1rem;">
                        {{ userStories.stories|length|default(0) }} stories ‚Ä¢ {{ userStories.story_points|default('N/A') }} pts
                    </span>
                </div>
            </div>
            <div class="card-body">
                {# Summary Metrics #}
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded bg-light">
                            <h6 class="text-muted mb-2">Story Points Total</h6>
                            <h2 class="text-primary mb-0">{{ userStories.story_points|default(0) }}</h2>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded bg-light">
                            <h6 class="text-muted mb-2">User Stories</h6>
                            <h2 class="text-info mb-0">{{ userStories.stories|length|default(0) }}</h2>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded bg-light">
                            <h6 class="text-muted mb-2">MUST Have</h6>
                            <h2 class="text-danger mb-0">
                                {% set must_count = 0 %}
                                {% for story in userStories.stories %}
                                    {% if story.priority == 'MUST' %}
                                        {% set must_count = must_count + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ must_count }}
                            </h2>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded bg-light">
                            <h6 class="text-muted mb-2">Sprints Estim√©s</h6>
                            <h2 class="text-warning mb-0">
                                {{ (userStories.story_points / 20)|round(0, 'ceil')|default('N/A') }}
                            </h2>
                        </div>
                    </div>
                </div>

                {# User Stories Cards #}
