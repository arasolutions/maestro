<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}MAESTRO Dashboard{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üéØ</text></svg>">
    {% block stylesheets %}
    {% endblock %}
    <style>
        /* Style moderne pour les liens de navigation */
        .navbar-nav .nav-link {
            position: relative;
            transition: all 0.3s ease;
            border-radius: 8px;
            padding: 0.5rem 1rem !important;
            margin: 0 0.2rem;
        }

        .navbar-nav .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
            text-decoration: none !important;
        }

        .navbar-nav .nav-link:focus,
        .navbar-nav .nav-link:active {
            background-color: rgba(255, 255, 255, 0.25);
            text-decoration: none !important;
            outline: none;
            box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.2);
        }

        /* Supprimer le soulignement par d√©faut */
        .navbar-nav .nav-link {
            text-decoration: none !important;
        }

        /* Animation smooth */
        .navbar-nav .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background-color: rgba(255, 255, 255, 0.8);
            transition: width 0.3s ease;
        }

        .navbar-nav .nav-link:hover::before {
            width: 80%;
        }

        /* Style pour le dropdown */
        .navbar-nav .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
            margin-top: 0.5rem;
        }

        .navbar-nav .dropdown-item {
            padding: 0.6rem 1.2rem;
            transition: all 0.2s ease;
        }

        .navbar-nav .dropdown-item:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateX(5px);
        }

        .navbar-nav .dropdown-item i {
            margin-right: 0.5rem;
            width: 20px;
            display: inline-block;
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" href="{{ path('app_home') }}">
                üéØ MAESTRO
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                {% if app.session.get('current_project_slug') %}
                    {# Projet s√©lectionn√© - afficher le menu complet #}
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <span class="nav-link text-white-50">
                                üìÅ {{ app.session.get('current_project_name') }}
                            </span>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_project_dashboard', {slug: app.session.get('current_project_slug')}) }}">üè† Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_request_new') }}">‚ûï Nouvelle Requ√™te</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="workflowDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                üìã Workflow
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="workflowDropdown">
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_requests_list') }}">
                                        <i class="bi bi-inbox"></i> Requ√™tes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_analyses_list') }}">
                                        <i class="bi bi-bar-chart"></i> Analyses
                                    </a>
                                </li>
                                {% if app.session.get('current_project_id') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_project_user_stories', {projectId: app.session.get('current_project_id')}) }}">
                                        <i class="bi bi-list-check"></i> User Stories
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_monitoring') }}">üîç Monitoring</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_projects_list') }}">‚öôÔ∏è Projets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_home') }}">üîÑ Changer</a>
                        </li>
                    </ul>
                {% else %}
                    {# Aucun projet s√©lectionn√© - menu minimal #}
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_home') }}">Projets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_projects_list') }}">‚öôÔ∏è Gestion</a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : (label == 'info' ? 'info' : 'success')) }} alert-dismissible fade show" role="alert">
                    {% if label == 'success' %}
                        <i class="bi bi-check-circle-fill me-2"></i>
                    {% elseif label == 'error' %}
                        <i class="bi bi-x-circle-fill me-2"></i>
                    {% elseif label == 'warning' %}
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    {% else %}
                        <i class="bi bi-info-circle-fill me-2"></i>
                    {% endif %}
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="mt-5 py-3 bg-white border-top">
        <div class="container text-center text-muted">
            <small>MAESTRO Platform &copy; {{ 'now'|date('Y') }} - Powered by AI Multi-Agent Orchestration</small>
        </div>
    </footer>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>
