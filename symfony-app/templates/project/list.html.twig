{% extends 'base.html.twig' %}

{% block title %}Gestion des Projets - MAESTRO{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold">Gestion des Projets</h1>
                <p class="text-muted">Créer, modifier et supprimer des projets</p>
            </div>
            <div>
                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary me-2">← Retour</a>
                <a href="{{ path('app_project_new') }}" class="btn btn-primary">➕ Nouveau Projet</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                {% if projects|length == 0 %}
                    <div class="text-center py-5">
                        <p class="text-muted">Aucun projet créé</p>
                        <a href="{{ path('app_project_new') }}" class="btn btn-primary">Créer le premier projet</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Slug</th>
                                    <th>Description</th>
                                    <th>Analyses</th>
                                    <th>Date création</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for project in projects %}
                                <tr>
                                    <td><strong>{{ project.name }}</strong></td>
                                    <td><code>{{ project.slug }}</code></td>
                                    <td>{{ project.description|default('—')|slice(0, 50) }}{% if project.description|length > 50 %}...{% endif %}</td>
                                    <td><span class="badge bg-primary">{{ project.analyses_count }}</span></td>
                                    <td>{{ project.created_at|date('d/m/Y') }}</td>
                                    <td class="text-nowrap">
                                        <a href="{{ path('app_project_dashboard', {slug: project.slug}) }}" class="btn btn-sm btn-outline-primary">
                                            Ouvrir
                                        </a>
                                        <a href="{{ path('app_project_edit', {slug: project.slug}) }}" class="btn btn-sm btn-outline-secondary ms-1">
                                            Éditer
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger ms-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteProjectModal"
                                                data-project-slug="{{ project.slug }}"
                                                data-project-name="{{ project.name }}">
                                            Supprimer
                                        </button>
                                        <form id="delete-form-{{ project.slug }}" action="{{ path('app_project_delete', {slug: project.slug}) }}" method="post" style="display: none;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.slug) }}">
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Modal de confirmation de suppression #}
<div class="modal fade" id="deleteProjectModal" tabindex="-1" aria-labelledby="deleteProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteProjectModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmer la suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer ce projet ?</p>
                <div class="alert alert-warning">
                    <strong>Projet :</strong> <span id="projectNamePreview"></span>
                </div>
                <p class="text-danger">
                    <i class="bi bi-info-circle"></i> Cette action est irréversible et supprimera toutes les données associées au projet.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteProject">
                    <i class="bi bi-trash"></i> Supprimer définitivement
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Gérer l'ouverture du modal et passer les données
const deleteProjectModal = document.getElementById('deleteProjectModal');
let currentProjectSlug = null;

deleteProjectModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    currentProjectSlug = button.getAttribute('data-project-slug');
    const projectName = button.getAttribute('data-project-name');

    // Mettre à jour le contenu du modal
    document.getElementById('projectNamePreview').textContent = projectName;
});

// Gérer la confirmation de suppression
document.getElementById('confirmDeleteProject').addEventListener('click', function() {
    if (currentProjectSlug) {
        document.getElementById('delete-form-' + currentProjectSlug).submit();
    }
});
</script>
{% endblock %}
