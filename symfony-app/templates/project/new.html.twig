{% extends 'base.html.twig' %}

{% block title %}Nouveau Projet - MAESTRO{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0 text-dark">Cr√©er un Nouveau Projet</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom du projet *</label>
                        <input type="text" class="form-control" id="name" name="name"
                               value="{{ name|default('') }}" required
                               placeholder="Ex: Mon Application E-commerce">
                        <small class="form-text text-muted">Le nom affich√© dans l'interface</small>
                    </div>

                    <div class="mb-3">
                        <label for="slug" class="form-label">Slug *</label>
                        <input type="text" class="form-control" id="slug" name="slug"
                               value="{{ slug|default('') }}" required
                               pattern="[a-z0-9-]+"
                               placeholder="Ex: mon-app-ecommerce">
                        <small class="form-text text-muted">Identifiant unique (lettres minuscules, chiffres et tirets uniquement)</small>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4"
                                  placeholder="D√©crivez votre projet...">{{ description|default('') }}</textarea>
                    </div>

                    <div class="mb-3">
                        <label for="technical_stack" class="form-label">Stack Technique</label>
                        <textarea class="form-control" id="technical_stack" name="technical_stack" rows="6"
                                  placeholder="Ex: PHP 8.2, Symfony 7.3, PostgreSQL 15, React 18, etc.">{{ technical_stack|default('') }}</textarea>
                        <small class="form-text text-muted">D√©crivez les technologies, frameworks, versions, etc. utilis√©s dans ce projet</small>
                    </div>

                    <hr class="my-4">
                    <h6 class="text-muted mb-3">üîó Configuration Git (optionnel)</h6>

                    <div class="mb-3">
                        <label for="git_url" class="form-label">URL du Repository Git</label>
                        <input type="url" class="form-control" id="git_url" name="git_url"
                               value="{{ git_url|default('') }}"
                               placeholder="https://github.com/username/repository.git">
                        <small class="form-text text-muted">L'URL du d√©p√¥t Git pour analyser le code existant</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="git_branch" class="form-label">Branche</label>
                            <input type="text" class="form-control" id="git_branch" name="git_branch"
                                   value="{{ git_branch|default('main') }}"
                                   placeholder="main">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="git_token" class="form-label">Access Token</label>
                            <input type="password" class="form-control" id="git_token" name="git_token"
                                   placeholder="ghp_xxxxxxxxxxxx (optionnel)">
                            <small class="form-text text-muted">Token pour les repos priv√©s</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_projects_list') }}" class="btn btn-outline-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Cr√©er le Projet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-g√©n√©ration du slug depuis le nom
document.getElementById('name').addEventListener('input', function() {
    const slug = this.value
        .toLowerCase()
        .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // Supprimer accents
        .replace(/[^a-z0-9\s-]/g, '') // Garder seulement lettres, chiffres, espaces et tirets
        .trim()
        .replace(/\s+/g, '-'); // Remplacer espaces par tirets
    document.getElementById('slug').value = slug;
});
</script>
{% endblock %}
