{% extends 'base.html.twig' %}

{% block title %}Sélection du Projet - MAESTRO{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold mb-3">
                <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    Bienvenue sur MAESTRO
                </span>
            </h1>
            <p class="lead text-muted">Plateforme d'orchestration multi-agents IA</p>
            <p class="text-muted">Sélectionnez un projet pour commencer</p>
        </div>

        {% if projects|length == 0 %}
            <div class="alert alert-info text-center">
                <h5>Aucun projet trouvé</h5>
                <p class="mb-3">Créez votre premier projet pour commencer à utiliser MAESTRO</p>
                <a href="{{ path('app_project_new') }}" class="btn btn-primary">
                    ➕ Créer mon premier projet
                </a>
            </div>
        {% else %}
            <div class="row g-4 mb-4">
                {% for project in projects %}
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 hover-card" style="cursor: pointer;" onclick="window.location='{{ path('app_project_select', {slug: project.slug}) }}'">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">{{ project.name }}</h5>
                                    <small class="text-muted">{{ project.slug }}</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">{{ project.analyses_count }} analyses</span>
                            </div>

                            {% if project.description %}
                                <p class="card-text text-muted small">{{ project.description|slice(0, 100) }}{% if project.description|length > 100 %}...{% endif %}</p>
                            {% endif %}

                            <div class="mt-3 pt-3 border-top">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        {% if project.last_analysis_date %}
                                            Dernière analyse : {{ project.last_analysis_date|date('d/m/Y') }}
                                        {% else %}
                                            Aucune analyse
                                        {% endif %}
                                    </small>
                                    <a href="{{ path('app_project_select', {slug: project.slug}) }}" class="btn btn-sm btn-outline-primary">
                                        Ouvrir →
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_project_new') }}" class="btn btn-outline-primary">
                    ➕ Créer un nouveau projet
                </a>
                <a href="{{ path('app_projects_list') }}" class="btn btn-outline-secondary">
                    ⚙️ Gérer les projets
                </a>
            </div>
        {% endif %}
    </div>
</div>

<style>
.hover-card {
    transition: transform 0.2s, box-shadow 0.2s;
}
.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}
</style>
{% endblock %}
