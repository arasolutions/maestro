{% extends 'base.html.twig' %}

{% block title %}Requête #{{ request.id[:8] }} - MAESTRO{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    {% if request.project_slug %}
                        <li class="breadcrumb-item"><a href="{{ path('app_project_dashboard', {slug: request.project_slug}) }}">{{ request.project_name }}</a></li>
                    {% endif %}
                    <li class="breadcrumb-item active">Requête #{{ request.id[:8] }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">
                    <i class="bi bi-file-text"></i> Détail de la requête
                </h1>
                <div class="d-flex gap-2">
                    {% if request.status == 'COMPLETED' and analysis %}
                        <a href="{{ path('app_analysis_detail', {id: analysis.id}) }}" class="btn btn-primary">
                            <i class="bi bi-bar-chart"></i> Voir l'analyse
                        </a>
                    {% endif %}
                    {% if request.status in ['COMPLETED', 'FAILED'] %}
                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#retryModal">
                            <i class="bi bi-arrow-clockwise"></i> Relancer l'analyse
                        </button>
                    {% endif %}
                </div>
            </div>

            {# Status Card #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <h5 class="card-title mb-0">Statut</h5>
                        </div>
                        <div class="col-md-9">
                            {% if request.status == 'PENDING' %}
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-clock"></i> En attente
                                </span>
                                <p class="text-muted mt-2 mb-0">La requête est en file d'attente</p>
                            {% elseif request.status == 'PROCESSING' %}
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-cpu"></i> En cours de traitement
                                </span>
                                <p class="text-muted mt-2 mb-0">
                                    Les agents IA analysent votre requête...
                                    <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                                </p>
                            {% elseif request.status == 'COMPLETED' %}
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> Terminée
                                </span>
                                <p class="text-muted mt-2 mb-0">L'analyse est disponible</p>
                            {% elseif request.status == 'FAILED' %}
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle"></i> Échec
                                </span>
                                {% if request.error_message %}
                                    <div class="alert alert-danger mt-3 mb-0">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <strong>Erreur:</strong> {{ request.error_message }}
                                            </div>
                                            <form method="post" action="{{ path('app_request_retry', {id: request.id}) }}" class="d-inline ms-3" data-turbo="false">
                                                <input type="hidden" name="_token" value="{{ csrf_token('retry_request_' ~ request.id) }}">
                                                <button type="submit" class="btn btn-warning btn-sm">
                                                    <i class="bi bi-arrow-clockwise"></i> Relancer l'analyse
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {# Request Details #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations de la requête</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>ID:</strong></div>
                        <div class="col-md-9"><code>{{ request.id }}</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Projet:</strong></div>
                        <div class="col-md-9">{{ request.project_name|default('N/A') }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Créée le:</strong></div>
                        <div class="col-md-9">{{ request.created_at|date('d/m/Y à H:i:s') }}</div>
                    </div>
                    {% if request.updated_at %}
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Mise à jour:</strong></div>
                        <div class="col-md-9">{{ request.updated_at|date('d/m/Y à H:i:s') }}</div>
                    </div>
                    {% endif %}
                    {% if request.webhook_execution_id %}
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Execution ID:</strong></div>
                        <div class="col-md-9"><code>{{ request.webhook_execution_id }}</code></div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Request Content #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Contenu de la requête</h5>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 rounded">{{ request.request_text }}</pre>
                </div>
            </div>

            {# Auto-refresh for processing status #}
            {% if request.status in ['PENDING', 'PROCESSING'] %}
            <div class="alert alert-info">
                <i class="bi bi-arrow-clockwise"></i> Cette page se rafraîchit automatiquement toutes les 5 secondes...
            </div>
            <script>
                setTimeout(function() {
                    location.reload();
                }, 5000);
            </script>
            {% endif %}
        </div>
    </div>
</div>

{# Modal de confirmation pour relancer l'analyse #}
<div class="modal fade" id="retryModal" tabindex="-1" aria-labelledby="retryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning bg-opacity-10">
                <h5 class="modal-title" id="retryModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Confirmer la relance
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Êtes-vous sûr de vouloir relancer l'analyse de cette requête ?</p>
                <div class="alert alert-warning mb-0">
                    <strong><i class="bi bi-info-circle"></i> Attention :</strong>
                    <ul class="mb-0 mt-2">
                        <li>L'analyse actuelle sera <strong>supprimée</strong></li>
                        <li>Tous les cadrages associés seront <strong>supprimés</strong></li>
                        <li>Toutes les user stories associées seront <strong>supprimées</strong></li>
                        <li>Une nouvelle analyse sera créée</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Annuler
                </button>
                <form method="post" action="{{ path('app_request_retry', {id: request.id}) }}" class="d-inline" data-turbo="false">
                    <input type="hidden" name="_token" value="{{ csrf_token('retry_request_' ~ request.id) }}">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-arrow-clockwise"></i> Relancer l'analyse
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
